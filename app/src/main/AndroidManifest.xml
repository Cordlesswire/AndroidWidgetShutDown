<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.widgetShutDown"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="7" />
    
    <uses-permission android:name="android.permission.HARDWARE_TEST" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
    
        <receiver android:name=".WidgetShutDown" android:label="Shutdown">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider" android:resource="@xml/widget"/>
		</receiver>
				
	    <activity android:name=".Restart">
            <intent-filter>
                <action android:name="com.restart" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
   		<activity android:name=".Shutdown">
            <intent-filter>
                <action android:name="com.shutdown" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    	<activity android:name=".ScreenOff">
            <intent-filter>
                <action android:name="com.screenOff" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>